<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fragment_border"
     >
    <ImageView 
        android:id="@+id/controller_imageView"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/error"
        />
    
    <View 
	    android:id="@+id/anchor"
	    android:layout_height="0dp"
	    android:layout_width="fill_parent"
	    android:layout_toRightOf="@id/controller_imageView"
	    android:layout_centerVertical="true"/>
    
	<TextView 
	     android:id="@+id/controller_title_textView"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_above="@id/anchor"
        android:layout_toRightOf="@id/controller_imageView"
         android:layout_toLeftOf="@+id/controller_button"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="15dp"
	    />
	
	<TextView 
	    android:id="@+id/controller_artist_textView"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/anchor"
        android:layout_toRightOf="@id/controller_imageView"
         android:layout_toLeftOf="@id/controller_button"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="14dp"
        
       />

    <Button
        android:id="@id/controller_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_play" />

</RelativeLayout>